---
interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "OpenClaw - 現役セキュリティエンジニアによるMac Mini環境構築サービス。徹底したセキュリティDDで安全な業務環境を実現します。",
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-white antialiased font-sans text-slate-900">
		<slot />
	</body>
</html>

<script>
	// スクロール連動アニメーション（Fearlock風: ビューポートに入ったらフェードアップ）
	const observer = new IntersectionObserver(
		(entries) => {
			for (const entry of entries) {
				if (entry.isIntersecting) {
					entry.target.classList.add("is-visible");
					observer.unobserve(entry.target);
				}
			}
		},
		{ rootMargin: "0px 0px -8% 0px", threshold: 0.1 }
	);
	document.querySelectorAll("[data-animate='fade-up']").forEach((el) => observer.observe(el));
</script>

<style>
	@import "@/styles/global.css";
</style>
